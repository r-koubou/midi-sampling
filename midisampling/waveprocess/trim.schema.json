{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Trim",
    "description": "Structure of the trim process configuration.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "threshold_db": {
            "type": "number",
            "description": "Silence threshold in dB."
        },
        "min_silence_ms": {
            "type": "number",
            "description": "Minimum silence duration in milliseconds."
        }
    },
    "required": [
        "threshold_db",
        "min_silence_ms"
    ],
    "examples": [
        [
            {
                "effects": [
                    {
                        "index": 0,
                        "name": "trim",
                        "params":
                        {
                            "threshold_db": -60.0,
                            "min_silence_ms": 250
                        }
                    }
                ]
            }
        ]
    ]
}
