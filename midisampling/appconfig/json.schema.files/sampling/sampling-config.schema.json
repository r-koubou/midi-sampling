{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sampling Configuration",
    "description": "Configuration for device, sampling.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "audio_channels": {
            "type": "integer",
            "description": "Number of channels in the sampled audio file."
        },
        "audio_sample_rate": {
            "type": "integer",
            "description": "Sampling rate of the audio file."
        },
        "audio_sample_bits": {
            "type": "integer",
            "description": "Bit depth of the sampled audio file.",
            "enum": [16, 24, 32]
        },
        "audio_sample_bits_format": {
            "type": "string",
            "description": "Format of the bit depth of the sampled audio file.",
            "enum": ["int", "float"]
        },
        "audio_in_device": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the input device for the sampled audio file."
                },
                "platform": {
                    "type": "string",
                    "description": "Platform of the input device for the sampled audio file (e.g., `ASIO`, `MME`, `Windows DirectSound`, `Windows WASAPI`, `Core Audio` etc.)."
                }
            },
            "required": [
                "name",
                "platform"
            ]
        },
        "asio_audio_ins": {
            "type": "array",
            "items": {
                "type": "integer",
                "description": "List of ASIO input channel numbers. Specify the input channel numbers of your device. The format starts from 0 (e.g., to use inputs 1 and 2, specify `[0, 1]`)"
            },
            "default": []
        },
        "midi_out_device": {
            "type": "string",
            "description": "Name of the MIDI device used for sampling."
        }
    },
    "required": [
        "audio_channels",
        "audio_sample_rate",
        "audio_sample_bits",
        "audio_sample_bits_format",
        "audio_in_device",
        "midi_out_device"
    ],
    "examples": [
        {
            "audio_channels": 2,
            "audio_sample_rate": 48000,
            "audio_sample_bits": 32,
            "audio_sample_bits_format": "int",
            "audio_in_device": {
                "name": "Yamaha Steinberg USB ASIO",
                "platform": "ASIO"
            },
            "asio_audio_ins": [
                2, 3
            ],
            "midi_out_device": "Roland SC-8850 PART A"
        }
    ]
}