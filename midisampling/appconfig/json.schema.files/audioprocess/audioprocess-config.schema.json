{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Audio process Configuration",
    "description": "Structure of the audio process configuration.",
    "definitions": {
        "def_audioprocess_config": {
            "type":"object",
            "additionalProperties": false,
            "properties": {
                "format": {
                    "$ref": "#/definitions/def_format"
                },
                "keep_wav_chunks": {
                    "type":"array",
                    "description": "A list of wave chunk names to keep via the audio process. if not specified, all chunks will be kept.",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "examples": [
                        ["smpl"],
                        ["smpl", "cue"]
                    ]
                },
                "effects": {
                    "type": "array",
                    "description": "A list of audio process configurations",
                    "items": {
                        "$ref": "#/definitions/def_effect"
                    }
                }
            }
        },
        "def_format": {
            "type": "object",
            "additionalProperties": false,
            "description": "Format configuration Specifying it explicitly in dependent libraries prevents auto-detection and false conversions within. However, this is not guaranteed as it depends on the library.",
            "properties": {
                "bit_depth": {
                    "type": "string",
                    "description": "The bit depth of the audio file. If not specified, the bit depth of the input file will be auto detected by dependency library.",
                    "enum": ["int16", "int24", "int32", "float32"]
                },
                "sample_rate": {
                    "type": "integer",
                    "description": "The sample rate of the audio file. If not specified, the sample rate of the input file will be auto detected by dependency library."
                },
                "channels": {
                    "type": "integer",
                    "description": "The number of channels of the audio file. If not specified, the number of channels of the input file will be auto detected by dependency library."
                }
            }
        },
        "def_effect": {
            "type": "object",
            "additionalProperties": false,
            "description": "Effect configuration",
            "properties": {
                "index": {
                    "type": "integer",
                    "description": "The index of the effect in the chain"
                },
                "name": {
                    "type": "string",
                    "description": "A effect name"
                },
                "params": {
                    "type": "object",
                    "description": "A dictionary of parameters for the effect",
                    "additionalProperties": true
                }
            },
            "required": [
                "index",
                "name",
                "params"
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "$ref": "#/definitions/def_audioprocess_config",
    "examples": [
        [
            {
                "keep_wav_chunks": ["smpl"],
                "format": {
                    "bit_depth": "int32",
                    "sample_rate": 48000,
                    "channels": 2
                },
                "effects": [
                    {
                        "index": 0,
                        "name": "normalize",
                        "params": {
                            "target_db": -10.0
                        }
                    },
                    {
                        "index": 1,
                        "name": "trim",
                        "params": {
                            "threshold_db": -65.0,
                            "min_silence_duration": 250
                        }
                    }
                ]
            }
        ]
    ]
}
