{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Audio process Configuration",
    "description": "Structure of the audio process configuration.",
    "definitions": {
        "def_audioprocess_config": {
            "type":"object",
            "additionalProperties": false,
            "properties": {
                "format": {
                    "$ref": "#/definitions/def_format"
                },
                "keep_wav_chunks": {
                    "type":"array",
                    "description": "A list of wave chunk names to keep via the audio process. if not specified, all chunks will be kept.",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "examples": [
                        ["smpl"],
                        ["smpl", "cue"]
                    ]
                },
                "effects": {
                    "type": "array",
                    "description": "A list of audio process configurations",
                    "items": {
                        "$ref": "#/definitions/def_effect"
                    }
                }
            }
        },
        "def_format": {
            "$ref": "audio-format.schema.json"
        },
        "def_effect": {
            "$ref": "audio-effect.schema.json"
        }
    },
    "type": "object",
    "additionalProperties": false,
    "$ref": "#/definitions/def_audioprocess_config",
    "examples": [
        [
            {
                "keep_wav_chunks": ["smpl"],
                "format": {
                    "bit_depth": "int32",
                    "sample_rate": 48000,
                    "channels": 2
                },
                "effects": [
                    {
                        "index": 0,
                        "name": "normalize",
                        "params": {
                            "target_db": -10.0
                        }
                    },
                    {
                        "index": 1,
                        "name": "trim",
                        "params": {
                            "threshold_db": -65.0,
                            "min_silence_duration": 250
                        }
                    }
                ]
            }
        ]
    ]
}
